<h4 class="center-align">Questions</h4>
<div class="row">
	<div class="col s12 m12">
		<div 	class="card grey darken-2" %>
			<div class="card-content white-text">
				<p class = "waves-effect waves-light btn chip"><%=link_to Course.find(@question.course_id).name%> 
				<h3><strong style="font-size 20px; font-weight: bold"><%= @question.doubt %> </strong></h3> 
        <p class="lime-text">posted by  <%= User.find(@question.user_id).name %>  
        <small>Created <%= time_ago_in_words(@question.created_at)%>    ago,
          edited <%=time_ago_in_words(@question.updated_at) %> ago</small></p>
				<p><%=pluralize( Answer.where(question_id: @question.id).count, "Answer")%></p>
        <% Answer.where(question_id: @question.id).each do |i|%>
          <hr/>						<div class="card black ">
					<% if User.find(i.user_id).ustype == "teacher" %>
							<h6 class="red lighten-2 s12 offset-s2 " >   <%= simple_format(i.solution) %></h6>
							
					<% else  %>
							<h6 class=" s12 offset-s2 " >   <%= simple_format(i.solution )%></h6>
					<% end %>

					<p class="card grey col s8 offset-s4">answered by  <%= User.find(i.user_id).name %>  
         	<small >Created <%= time_ago_in_words(i.created_at)%>    ago,
          edited <%=time_ago_in_words(i.updated_at) %> ago</small></p>
					<br/><br/>
					<%= link_to "Edit Answer", edit_answer_path(i,question_id: @question.id) , class:"btn waves-effect waves-light blue"%>  
					<%= link_to("Delete Answer", answer_path(i), method: "delete", class:"btn waves-effect waves-light red lighten-1", data:{confirm: "Are you sure?"}) %>  
						</div>
					<%end%>
			</div>
			<div class="card-action">
			<%= link_to "Edit Question", edit_question_path(@question) %>  
			<%= link_to "Add answer", new_answer_path(question_id:@question.id) %>  
			</div>
		</div>
		<p class="center-align">[ <%= link_to " Return back to Questions ", questions_path(), class:"center-align" %>]</p>
	</div>
</div>