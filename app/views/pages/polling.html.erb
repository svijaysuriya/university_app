<div class="container">
	<div class="row-center sign-up-form">
		<div class="col s12">
			<div class="card-panel">
				<h3 class="header center-align">polling</h3>
				<div class="row">
					<%= form_for( :polling , html: {class:"col s12"})do |f| %>
						<div class="row">
							<div class="input-field cols12">
							<strong>Choose your elective</strong>
              <%= f.collection_select( :course_id, Course.where(category: "hardcore").order(:name), :id, :name,
              class: "input-field") %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
								<%= f.button( '<i class="material-icons right">arrow_forward</i>Submit Poll'.html_safe , class: "btn orange waves-effect waves-light right" ) %>
							</div>
						</div>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>