<%= render 'shared/errors', obj: @user %>
<div class="container">
	<div class="row-center sign-up-form">
		<div class="col s12">
			<div class="card-panel">
				<h3 class="header center-align"><%=@user.new_record? ? "Sign up" : "Edit your profile"%></h3>
				<div class="row">
					<%= form_for( @user , html: {class:"col s12"})do |f| %>
						<div class="row">
							<div class="input-field cols12">
								<%= f.text_field :name , placeholder: "Enter your name", autofocus: true%>
								<%= f.label :name, class: "active"  %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
								<%= f.email_field :email, placeholder: "Enter your email", autofocus: true %>
								<%= f.label :email, class: "active" %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
							<%= f.text_field  :ustype, placeholder: "student or teacher" %>
							<%= f.label :ustype, "User Type",class: "active" %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
								<%= f.password_field :password, placeholder: "choose a password", autofocus: true %>
								<%= f.label :password, class: "active" %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
								<%= f.password_field :password_confirmation, placeholder: "confirm your password", autofocus: true %>
								<%= f.label :password_confirmation, class: "active"  %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
								<%= f.button( @user.new_record? ? '<i class="material-icons right">arrow_forward</i>Sign up'.html_safe : '<i class="material-icons right">arrow_forward</i>Update profile'.html_safe, class: "btn orange waves-effect waves-light right" ) %>
							</div>
						</div>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>