<header>
  <ul id="dropdown1" class="dropdown-content">
    <li><%= link_to "View Courses" ,courses_path %> </li>
    <% if logged_in? && current_user.admin? %>
      <li><%= link_to "Create a new Course" ,new_course_path %> </li>
    <% end %>
    <li class="divider"></li>
    <li><%= link_to "Questions Forum" ,questions_path %> </li>
  </ul>
  <ul id="dropdown2" class="dropdown-content">
    <li><%= link_to "View Courses" ,courses_path %> </li>
    <% if logged_in? && current_user.admin? %>
      <li><%= link_to "Create a new Course" ,new_course_path %> </li>
    <% end %>
    <li class="divider"></li>
    <li><%= link_to "Questions Forum" ,questions_path %> </li>
  </ul>
  <nav>
    <div class="nav-wrapper container">
      <%=link_to "Univ App",root_path,class: "brand-logo right" %>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul id="nav-mobile" class="left hide-on-med-and-down">
        <li><%= link_to "Home" , root_path %></li>
        <li><a class="dropdown-trigger" data-target="dropdown1">Course<i class="material-icons right">arrow_drop_down</i></a></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path%></li>
          <li><%= link_to "My Profile", user_path(current_user)%></li>
          <li><%= link_to "logout", logout_path, method: "delete"%></li>
        <% else %>
          <li><%= link_to "Login", login_path%></li>
          <li><%= link_to "Sigup", new_user_path%></li>
        <%end%>
      </ul>
      <ul class="sidenav" id="mobile-demo">
        <li><%= link_to "Home" , root_path %></li>
        <li><a class="dropdown-trigger" data-target="dropdown2">Course<i class="material-icons right">arrow_drop_down</i></a></li>
        <% if logged_in? %>
          <li><%= link_to "My Profile", user_path(current_user)%></li>
          <li><%= link_to "logout", logout_path, method: "delete"%></li>
        <% else %>
          <li><%= link_to "Login", login_path%></li>
          <li><%= link_to "Sigup", new_user_path%></li>
        <%end%>
      </ul>
    </div>
  </nav>
  <% flash.each do |k,v| %>
    <div class="container">
      <div class="row-center sign-up-form">
        <div class="col s12">
          <% if k == "notice" %>
            <div class="card-panel green lighten-3" ,id="fade-out-target1">
              <span class ="white-text">
                  <%= v %>
              <span>
            </div>
            <% else %>
            <div class="card-panel red lighten-3" ,id="fade-out-target1">
              <span class ="white-text">
                <%= v %>
              <span>
            </div>
          <%end%>
        </div>
      </div>  
    </div>  
  <% end %>
</header>