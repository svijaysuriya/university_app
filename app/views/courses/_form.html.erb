<%= render 'shared/errors', obj: @course %>
<div class="container">
	<div class="row-center sign-up-form">
		<div class="col s12">
			<div class="card-panel">
				<h3 class="header center-align"><%=@course.new_record? ? "Create a new course " : "Edit a course "%></h3>
				<div class="row">
					<%= form_for( @course , html: {class:"col s12"})do |f| %>
						<div class="row">
							<div class="input-field cols12">
								<%= f.text_field :short_name , placeholder: "short name for the course", autofocus: true%>
								<%= f.label :short_name, class: "active"  %>
							</div>
						</div>
            <div class="row">
							<div class="input-field cols12">
								<%= f.text_field :name , placeholder: "name of the course", autofocus: true%>
								<%= f.label :name, class: "active"  %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
								<%= f.text_field :description, placeholder: "description about the course", autofocus: true %>
								<%= f.label :description, class: "active" %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
							<%= f.text_field :course_instructor, placeholder: "Enter the course_instructor", autofocus: true %>
							<%= f.label :course_instructor, class: "active" %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
								<%= f.text_field :max_limit, placeholder: "maximum number of students that could be enrolled", autofocus: true %>
								<%= f.label :max_limit, class: "active" %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
								<%= f.text_field :category, placeholder: "enter the category", autofocus: true %>
								<%= f.label :category, class: "active" %>
							</div>
						</div>
						<div class="row">
							<div class="input-field cols12">
								<%= f.button( @course.new_record? ? '<i class="material-icons right">arrow_forward</i>Create Course'.html_safe : '<i class="material-icons right">arrow_forward</i>Update Course'.html_safe, class: "btn orange waves-effect waves-light right" ) %>
							</div>
						</div>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>