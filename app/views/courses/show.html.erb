<div class="row sign-up-form">
	<div class="col s12 m12">
		<div class="card blue-grey ">
			<div class="card-content white-text">
				<span class = "card-title"><p><strong class="black-text"><%= @course.short_name %> : </strong>  <%= @course.name %> </span>
				<p><strong class="black-text">Description : </strong> <%= @course.description %> </p>
				<p><strong class="black-text">Course Instructor : </strong> <%= link_to @user.name, user_path(@user), class: "grey-text" %> </p>
				<p><strong class="black-text">Category : </strong> <%= @course.category %> </p>
				<p><strong class="black-text">Enrollements: </strong> <%= @course.enrolled_students %> / <%= @course.max_limit %> 
				<hr/><p><strong class="black-text">Students</strong>	
					<% if @course.users.empty? %>
						None
					<%else%>
						<ul>
							<% @course.users.each do |i| %>
								<li><% if i.ustype != "teacher" %><%=link_to i.name, user_path(i), class:"yellow-text"%><%end%></li>
							<% end %>
						</ul>
					</p>
					<%end%>
			</div>
			<% if logged_in? && current_user.admin?%>
				<div class="card-action">
					<%= link_to '<i class="material-icons right">create</i>Edit Course'.html_safe, edit_course_path(@course) ,class:"waves-effect waves-light btn" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

